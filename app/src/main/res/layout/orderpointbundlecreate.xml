<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite">




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                          >
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Order-Dots "
                                    android:layout_marginTop="1dp"
                                    android:typeface="sans"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorGreen"
                                    android:gravity="center" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="create bundle"
                                    android:layout_marginTop="1dp"
                                    android:typeface="sans"
                                    android:textSize="20sp"
                                    android:textColor="@color/colorGreen"
                                    android:gravity="center" />
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                >

                                <ImageButton
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/grocery_"
                                    android:padding="5dp"
                                    android:visibility="invisible"
                                    android:scaleType="fitXY"
                                    android:id="@+id/filterretailer"
                                    android:background="@color/colorWhite"
                                    />
                                <EditText
                                    android:layout_width="150sp"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:hint="e.g Yoghurt"
                                    android:textAlignment="center"
                                    android:background="@drawable/edittext_bground"
                                    android:padding="5dp"

                                    android:id="@+id/edtsearch"
                                    />

                                <ImageButton
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                  android:src="@drawable/search"
                                    android:padding="5dp"

                                    android:scaleType="fitXY"
                                android:id="@+id/search"
                                    android:background="@color/colorWhite"
                                    />



                            </LinearLayout>


                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                 android:layout_gravity="center"
                                android:gravity="center"
                                >


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Select bundle items first and click Done."
                                    android:layout_marginTop="1dp"
                                    android:typeface="sans"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:id="@+id/txtselect"
                                    android:textColor="@color/colorRed"
                                    android:gravity="center" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                >

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Done"
                                    android:id="@+id/btn_schedule"
                                    android:textColor="@color/colorRed"
                                    android:layout_marginTop="1dp"
                                    android:padding="10dp"
                                    android:textStyle="bold"
                                    android:background="@drawable/button_bground_premium"
                                    />
                            </LinearLayout>








                            <LinearLayout
                                android:id="@+id/layoutlist"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"

                                >
                                <ListView

                                    android:id="@+id/lstgross"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:divider="@color/colorWhite"
                                 android:padding="1dp"
                                    android:dividerHeight="2dp"
                                    android:layout_weight="1"

                                    >
                                </ListView>

                            </LinearLayout>

                            <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
                            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#ffffff"
                                android:orientation="vertical"
                                android:id="@+id/layout_bundle_details"
                                android:visibility="gone"

                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center">
                                    <TextView
                                        android:layout_width="130sp"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Bundle Name"
                                        />
                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="1dp"
                                        android:textColor="#5d5d5d"
                                        android:background="@drawable/edittext_bground"
                                        android:padding="5dp"
                                        android:id="@+id/edtbundlename" />
                                </LinearLayout>



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center">
                                    <TextView
                                        android:layout_width="130sp"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Quantity"
                                        />
                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:textColor="#5d5d5d"
                                        android:background="@drawable/edittext_bground"
                                        android:padding="5dp"
                                        android:layout_marginTop="1dp"
                                        android:id="@+id/edtquantity" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center">
                                    <TextView
                                        android:layout_width="130sp"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Price : R"
                                        />
                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:textColor="#5d5d5d"
                                        android:background="@drawable/edittext_bground"
                                        android:padding="5dp"
                                        android:layout_marginTop="1dp"
                                        android:id="@+id/edtprice" />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center">
                                    <TextView
                                        android:layout_width="130sp"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Optional Price : R"
                                        />
                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:textColor="#5d5d5d"
                                        android:background="@drawable/edittext_bground"
                                        android:padding="5dp"
                                        android:layout_marginTop="1dp"
                                        android:id="@+id/edtpriceoptinal" />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center">
                                    <TextView
                                        android:layout_width="130sp"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Serving Individual"
                                        />
                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:textColor="#5d5d5d"
                                        android:hint="Number of days..."
                                        android:background="@drawable/edittext_bground"
                                        android:padding="5dp"
                                        android:layout_marginTop="1dp"
                                        android:id="@+id/edtdays" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center">
                                    <TextView
                                        android:layout_width="130sp"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Serving Family"
                                        />
                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:textColor="#5d5d5d"
                                        android:background="@drawable/edittext_bground"
                                        android:padding="5dp"
                                        android:hint="Number of head/s..."
                                        android:layout_marginTop="1dp"
                                        android:id="@+id/edtfamily" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center">
                                    <TextView
                                        android:layout_width="130sp"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Serving Time"
                                        />
                                    <Spinner
                                        android:id="@+id/spinnerservingtime"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_marginTop="1dp"
                                        android:textColor="#5d5d5d"
                                        android:background="@drawable/edittext_bground"

                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center">
                                    <TextView
                                        android:layout_width="130sp"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Bundle Image"
                                        />
                                    <ImageView
                                        android:id="@+id/bundleprofileImage"
                                        android:layout_width="150dp"
                                        android:layout_height="150dp"
                                        android:layout_marginTop="2dp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/profilephoto" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                   >



                                    <Button
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@drawable/button_bground"
                                        android:textColor="#009111"
                                        android:layout_margin="2dp"
                                        android:padding="7dp"
                                        android:layout_marginTop="1dp"
                                        android:id="@+id/btn_create"
                                        android:text="Save" />




                                </LinearLayout>
                            </LinearLayout>
                            </LinearLayout>
                            </ScrollView>


                        </LinearLayout>



                    </LinearLayout>











