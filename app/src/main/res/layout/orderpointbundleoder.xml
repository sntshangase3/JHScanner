<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorWhite">




                            <LinearLayout
                                android:id="@+id/layout"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                   android:gravity="center"
                                    android:background="@color/colorWhiteTransparent"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/edtbundlename"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="1dp"
                                        android:text="Wine and Chocolate"
                                        android:textColor="@color/colorGray"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/edtquantity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="1dp"
                                        android:text="4 items"
                                        android:textColor="@color/colorRed"

                                        />

                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    >
                                    <Spinner
                                        android:id="@+id/spinnercategory"
                                        android:layout_width="wrap_content"
                                        android:layout_height="1dp"
                                        android:layout_gravity="center_horizontal"
                                        android:visibility="invisible"
                                        />

                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    >
                                    <Spinner
                                        android:id="@+id/spinnercategory1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="1dp"
                                        android:layout_gravity="center_horizontal"
                                        android:visibility="invisible"
                                        />

                                </LinearLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:gravity="center"
                                    android:layout_marginTop="130dp"

                                  >

                                    <TextView
                                        android:id="@+id/edtprice"
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/button_bground_login3"
                                        android:padding="3dp"
                                        android:text="R230,20"

                                        android:textAlignment="center"
                                        android:textColor="@color/colorWhite"
                                        android:layout_alignParentBottom="true"

                                        android:textStyle="bold" />

                                    <ImageView
                                        android:id="@+id/optional"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/addmenu"
                                        android:layout_below="@id/edtcountoptional"
                                        android:layout_marginLeft="107dp"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="3"
                                        android:layout_marginLeft="120dp"
                                        android:id="@+id/edtcountoptional"
                                        android:textSize="15sp"
                                        android:textColor="@color/colorYellow"
                                        />
                                    <ImageView
                                        android:id="@+id/recipe"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:src="@drawable/mypot"

                                        android:layout_marginLeft="160dp"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="3"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginLeft="190dp"
                                        android:id="@+id/edtrecipe"
                                        android:textSize="15sp"
                                        android:textColor="@color/colorYellow"
                                        />

                                </RelativeLayout>

                            </LinearLayout>



                            <LinearLayout
                                android:id="@+id/layoutlist"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorWhite"
                               android:layout_marginBottom="45dp"
                                android:layout_below="@+id/layout"
                                >
                                <ListView

                                    android:id="@+id/lstgross"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:divider="@color/colorWhite"
                                    android:padding="1dp"
                                    android:dividerHeight="4dp"
                                    android:layout_weight="1"
                                    >
                                </ListView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal"
                              >

                                <Button
                                    android:id="@+id/btn_order"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30sp"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_bground"
                                    android:text="Main Order"
                                    android:textColor="@color/colorYellow" />
                                <Button
                                    android:id="@+id/btn_orderfull"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30sp"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_bground"
                                    android:text="Full Order"
                                    android:textColor="@color/colorPrimaryDark" />

                                <Button
                                    android:id="@+id/btn_delete"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30sp"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_bground"
                                    android:text="Delete"

                                    android:textColor="@color/colorRed" />

                            </LinearLayout>



                    </RelativeLayout>











