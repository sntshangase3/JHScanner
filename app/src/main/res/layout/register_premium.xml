<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
     >
        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="Premium Service"
            android:typeface="sans"
            android:textAlignment="center"
            android:textSize="20sp"
            android:padding="2dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_bground_profile_premium"
            android:gravity="center" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorRed"
            android:text="Free"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="Until further Notice"
            />


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Family Members"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:hint="e.g 3"
            android:inputType="number"
            android:textColor="#5d5d5d"
          android:background="@drawable/edittext_bground"
            android:padding="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/edtfamilymembers" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:background="#5d5d5d"
            android:padding="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/edtassistanceid" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:background="#5d5d5d"
            android:padding="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/edtcomanagerid" />

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Co-Manager Name"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textColor="#5d5d5d"
            android:editable="false"
            android:background="@drawable/edittext_bground"
            android:padding="5dp"
            android:id="@+id/edtcomanagername" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Day Pass Code"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

android:inputType="number"
            android:textColor="#5d5d5d"
            android:background="@drawable/edittext_bground"
            android:padding="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/edtcomanagerdaypasscode" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Cell Phone"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:editable="false"
            android:inputType="phone"
            android:textColor="#5d5d5d"
            android:background="@drawable/edittext_bground"
            android:padding="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/edtcomanagercontactno" />

    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Manager Profile"
                    />
                <ImageView
                    android:id="@+id/comanagerprofileImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"

                    android:background="@drawable/profile_bg_rounded_corners"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilephoto" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Assistance Name"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:textColor="#5d5d5d"

                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:id="@+id/edtassistancename" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Day Pass Code"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:inputType="number"
                    android:textColor="#5d5d5d"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:layout_marginTop="1dp"
                    android:id="@+id/edtassistancedaypasscode" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Cell Phone"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textColor="#5d5d5d"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:layout_marginTop="1dp"
                    android:id="@+id/edtassistancecontactno" />

            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Assistance Profile"
                />
            <ImageView
                android:id="@+id/assistanceprofileImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/profile_bg_rounded_corners"
                android:scaleType="centerCrop"
                android:src="@drawable/profilephoto" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Allergy Members"
                    android:textStyle="bold"
                    android:textColor="@color/colorRed"
                    />
                <Spinner
                    android:id="@+id/spinnermember"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="1dp"
                    android:textColor="#5d5d5d"
                    android:background="@drawable/edittext_bground"

                    />
                      </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/layoutallergymembers"
               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="130sp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Member Name"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
android:hint="Type Name..."
                        android:textColor="#5d5d5d"
                        android:background="@drawable/edittext_bground"
                        android:padding="5dp"
                        android:layout_marginTop="1dp"
                        android:id="@+id/edtmembername" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="130sp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Allergy"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:hint="Select below..."
                        android:textColor="#5d5d5d"
                        android:background="@drawable/edittext_bground"
                        android:padding="5dp"
                        android:layout_marginTop="1dp"
                        android:id="@+id/edtallergy" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="130sp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Intolerant"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#5d5d5d"
                        android:hint="Select below..."
                        android:editable="true"
                        android:background="@drawable/edittext_bground"
                        android:padding="5dp"
                        android:layout_marginTop="1dp"
                        android:id="@+id/edtintolerant" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:layout_margin="2dp"
                    android:weightSum="4"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/familyprofileImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/profile_bg_rounded_corners"
                        android:src="@drawable/profilephoto" />

                    <Spinner
                        android:id="@+id/spinnerallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_margin="4dp"
                        android:textColor="#5d5d5d"
                        android:background="@drawable/edittext_bground"
                        android:padding="10dp"
                        />
                    <Spinner
                        android:id="@+id/spinnerintolerant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_margin="4dp"
                        android:textColor="#5d5d5d"
                        android:background="@drawable/edittext_bground"
                        android:padding="10dp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"

                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/addmember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/profile_bg_rounded_corners"

                        android:layout_weight="1"
                        android:src="@drawable/addmember" />
                    <ImageView
                        android:id="@+id/updatemember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/profile_bg_rounded_corners"

                        android:layout_weight="1"
                        android:src="@drawable/updatemember" />

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >


                <Button
                    android:id="@+id/btn_create"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="1dp"

                    android:layout_weight="1"
                    android:background="@drawable/button_bground"
                    android:padding="7dp"
                    android:text="Sign Up"
                    android:textColor="#009111" />



                <ImageButton
                    android:id="@+id/btn_update"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:padding="7dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/accept"
                    android:background="@drawable/button_bground"
                    android:gravity="center"
                    />
    

    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>