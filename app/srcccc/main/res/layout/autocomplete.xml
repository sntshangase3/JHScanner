<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
     >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Chef Service Partnership"
            android:typeface="sans"
            android:textAlignment="center"
            android:textSize="20sp"
            android:padding="2dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_bground_profile_premium"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/see_how"
            android:textStyle="italic"
            android:textColor="@color/colorBlue"
            android:onClick="onClick"
            android:clickable="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:id="@+id/txtseehow"
            />

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Your Name"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#5d5d5d"
          android:background="@drawable/edittext_bground"
            android:padding="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/edtname" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:background="#5d5d5d"
            android:padding="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/edtuserid" />

    </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text=""
                    />

                <fragment
                    android:id="@+id/place_autocomplete_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                    android:layout_marginTop="2dp"
                    android:padding="1dp"
                    android:background="@drawable/edittext_bground"
                    />
            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Address"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#5d5d5d"
            android:background="@drawable/edittext_bground"
            android:padding="5dp"
          android:editable="false"
            android:layout_marginTop="1dp"
            android:id="@+id/edtaddress" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Telephone"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#5d5d5d"
            android:background="@drawable/edittext_bground"
            android:padding="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/edttelephone" />

    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Website"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#5d5d5d"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:layout_marginTop="1dp"
                    android:id="@+id/edtwebsite" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="About you"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#5d5d5d"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                  android:hint="Briefly tell us about your service..."
                    android:layout_marginTop="1dp"
                    android:id="@+id/edtaboutyou"

                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="100dp"
                    android:text="Tick Services you're offering"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="138sp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Cooked Meal Orders"
                        />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/colorPrimary"
                        android:padding="5dp"
                        android:id="@+id/chkcookmealorders" />
                    <TextView
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Meal Kit Orders"
                        />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/colorPrimary"
                        android:padding="5dp"
                        android:id="@+id/chkmealkitorders" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="138sp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Catering services"
                        />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/colorPrimary"
                        android:padding="5dp"
                        android:id="@+id/chkcateringservices" />
                    <TextView
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Recipe designs "
                        />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/colorPrimary"
                        android:padding="5dp"
                        android:id="@+id/chkrecipedesigns" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="138sp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Private Chef Service"
                        />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/colorPrimary"
                        android:padding="5dp"
                        android:id="@+id/chkprivatechefservices" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textStyle="bold"
               android:layout_gravity="center"
                    android:text="Upload Maximum of 10 Dishes and 5 Ingredients Per Dish"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Dish Name"
                    />
                <EditText
                    android:layout_width="110sp"
                    android:layout_height="wrap_content"
                    android:textColor="#5d5d5d"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"

                    android:layout_marginTop="1dp"
                    android:id="@+id/edtnamedish" />
                <TextView
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="   Image"
                    />
                <ImageView
                    android:id="@+id/dishprofileImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/profile_bg_rounded_corners"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilephoto" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Key Ingredients"
                    />
                <EditText
                    android:layout_width="110sp"
                    android:layout_height="wrap_content"
                    android:textColor="#5d5d5d"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="1dp"
                    android:id="@+id/edtkeyingredients" />
                <TextView
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text=" Recipe"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5d5d5d"
                    android:background="@drawable/edittext_bground"
                    android:padding="5dp"
                    android:hint="Optional"
                    android:textStyle="italic"
                      android:layout_marginTop="1dp"
                    android:id="@+id/edtrecipe" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:layout_gravity="center">
                <ImageButton
                    android:id="@+id/btn_addish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:src="@drawable/adddish"
                    android:layout_gravity="right"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/dishlist"

                >


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@color/colorWhite"
                    android:layout_gravity="center"

                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Item"
                        android:gravity="center"
                        android:layout_weight="10"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        android:layout_weight="10"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="KEY"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_weight="10"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:text="Recipe"
                        android:gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_weight="10"
                        />



                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layoutlist"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:background="@color/colorWhite"
                    >
                    <ListView

                        android:id="@+id/lstdish"
                        android:layout_width="0dp"
                        android:layout_height="600dp"
                        android:divider="@color/colorWhite"
                        android:padding="1dp"
                        android:dividerHeight="4dp"
                        android:layout_weight="1"
                        >
                    </ListView>

                </LinearLayout>





            </LinearLayout>

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3" >



        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bground"
            android:textColor="#009111"
            android:layout_margin="2dp"
            android:padding="7dp"
            android:layout_marginTop="1dp"
            android:id="@+id/btn_signup"
            android:text="Sign Up" />

                <ImageButton
                    android:id="@+id/btn_update"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:padding="7dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/accept"
                    android:background="@drawable/button_bground"
                    android:gravity="center"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_bground"
                    android:textColor="#009111"
                    android:layout_margin="2dp"
                    android:padding="7dp"
                    android:layout_marginTop="1dp"
                    android:id="@+id/btn_delete"
                    android:text="Delete" />

    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>