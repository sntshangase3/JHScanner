<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/txtback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:onClick="onClick"
                android:clickable="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consumption Insights"
                android:id="@+id/txtTheKitchen"
                android:typeface="sans"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"

                />

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/consume_bg_rounded_corners"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtwastecurrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R802,3"
                    android:textStyle="bold"
                    android:textColor="@color/colorGray"
                    android:gravity="center"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Consumed"
                    android:textColor="@color/colorGray"
                    android:gravity="center"

                    />
                <TextView
                    android:id="@+id/txtwastecurrentmonth"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:text="1 Apr - 30 Apr"
                    android:textColor="@color/colorGray"
                    android:gravity="center"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:id="@+id/txtwastecurrentmonthdaystogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="        13 Days to Go        "
                    android:textColor="@color/colorGray"
                    android:gravity="center"
                    android:layout_centerHorizontal="true" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">






            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_bground_profile_premium"
                    android:gravity="center"
                           android:text="Total Annual Consumption"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="18"
                    android:gravity="left"
                    android:text="Category"
                    android:textColor="@color/colorBlack"


                    />

                <TextView
                    android:id="@+id/txtannualconsume"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:text="R3000"
                    android:textColor="@color/colorBlack" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:text="%"
                    android:textColor="@color/colorBlack"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:background="@drawable/edittext_bground_prepost"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="18"
                        android:gravity="left"
                        android:text="Breakfast"
                        android:textColor="@color/colorBlack"


                        />

                    <TextView
                        android:id="@+id/txtbreakfastvalue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="R3000"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/txtbreakfastpercent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="46%"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="18"
                        android:gravity="left"
                        android:text="Lunch"
                        android:textColor="@color/colorBlack"

                        />

                    <TextView
                        android:id="@+id/txtlunchvalue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="R3600"
                        android:textColor="@color/colorBlack"
                        />

                    <TextView
                        android:id="@+id/txtlunchpercent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="54%"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="18"
                        android:gravity="left"
                        android:text="Dinner/Supper"
                        android:textColor="@color/colorBlack"

                        />

                    <TextView
                        android:id="@+id/txtdinnersuppervalue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="R3600"
                        android:textColor="@color/colorBlack"
                        />

                    <TextView
                        android:id="@+id/txtdinnersupperpercent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="54%"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="18"
                        android:gravity="left"
                        android:text="Snack/Other"
                        android:textColor="@color/colorBlack"

                        />

                    <TextView
                        android:id="@+id/txtsnackothervalue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="R3600"
                        android:textColor="@color/colorBlack"
                        />

                    <TextView
                        android:id="@+id/txtsnackotherpercent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="54%"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="Loading please wait..."
                    android:textColor="@color/colorGreen"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:visibility="gone" />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/layoutlist"

                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="@color/colorWhite">

                <ListView

                    android:id="@+id/lstgross"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:divider="@color/colorWhite"
                    android:dividerHeight="4dp"
                    android:padding="1dp"></ListView>

            </LinearLayout>

        </LinearLayout>
        </ScrollView>




    </LinearLayout>


</LinearLayout>











