<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:scaleType="centerCrop"
    android:id="@+id/homepage"
    android:background="@drawable/home_background"

    >





    <RelativeLayout
        android:id="@+id/btndescription4"
        android:layout_width="200dp"
        android:layout_height="200dp"
         android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
    >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"  >

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:src="@drawable/logos"
                android:layout_marginLeft="6dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />

            <ImageView
                android:id="@+id/profileImage"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:src="@drawable/profilephoto"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"

              />
        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Ingredients"
            android:typeface="sans"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:gravity="center" />
        <ImageView
            android:id="@+id/moretap"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/moretap"
            />

    </LinearLayout>







    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
             android:weightSum="2">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:id="@+id/b1"
            android:src="@drawable/mypot"
           />

        <TextView
            android:id="@+id/txtnotice1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/b1"
            android:layout_alignTop="@+id/txtnotice2"
            android:layout_marginEnd="31dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/status_expire_notice_home"
            android:gravity="center"

            android:textAlignment="center"
            android:textColor="#FFA500"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:typeface="sans"
            android:textSize="20sp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="12dp"
            android:textAlignment="center"
            android:layout_alignTop="@+id/b1"
android:text="The Kitchen"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:layout_marginBottom="25dp"
             android:id="@+id/b2"
            android:src="@drawable/grocery"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
             />
        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textColor="#FFA500"
            android:gravity="center"
          android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginRight="60dp"
            android:textAlignment="center"
            android:layout_alignTop="@+id/b2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/status_prime_notice_home"
            android:id="@+id/txtnotice2"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:text="My Grocery"
            android:typeface="sans"
            android:layout_marginTop="90dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_alignTop="@+id/b2"
            android:layout_marginRight="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
          android:gravity="center">

        <Button
            android:id="@+id/btn_premium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscribe Free Premium Service"

            android:textColor="@color/colorWhite"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:background="@drawable/button_bground_premium"
            />

    </LinearLayout>






</LinearLayout>