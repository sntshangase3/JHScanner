<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite">




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                          >







                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="The Kitchen - Dish Collection Request"
                                    android:layout_marginTop="10dp"
                                    android:textStyle="bold"
                                    android:typeface="sans"
                                    android:textSize="20sp"
                                    android:layout_margin="5dp"
                                    android:gravity="center"
                                    android:textColor="@color/colorWhite"
                                    android:background="@drawable/button_bground_profile_premium"
                                    />

                            </LinearLayout>












                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                android:orientation="vertical"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/selecttxt"
                                        android:text="Tap Request to view:"
                                        android:layout_marginTop="1dp"
android:layout_gravity="center"
                                        android:typeface="sans"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorRed"
                                        android:gravity="center" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center">

                                    <TextView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:textColor="#FFA500"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textAlignment="center"
                                               android:background="@drawable/status_prime_notice_home"
                                        android:id="@+id/orders"

                                        />

                                    <Button
                                        android:id="@+id/dishorders"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="1dp"
                                        android:layout_margin="3dp"
                                        android:padding="5dp"
                                        android:textStyle="bold"
                                        android:text="Dish Own Orders"
                                        android:background="@drawable/button_bground"
                                        android:textColor="#009111"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center">

                                    <TextView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:textColor="#FFA500"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textAlignment="center"
                                        android:background="@drawable/status_prime_notice_home"
                                        android:id="@+id/orderscustomer"

                                        />

                                    <Button
                                        android:id="@+id/dishorderscustomer"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="1dp"
                                        android:layout_margin="3dp"
                                        android:padding="5dp"
                                        android:textStyle="bold"
                                        android:text="Dish Customer Orders"
                                        android:background="@drawable/button_bground"
                                        android:textColor="#009111"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center">

                                    <TextView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:textColor="#FFA500"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textAlignment="center"
                                        android:background="@drawable/status_prime_notice_home"
                                        android:id="@+id/share"

                                        />

                                    <Button
                                        android:id="@+id/dishshare"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="1dp"
                                        android:layout_margin="3dp"
                                        android:padding="5dp"
                                        android:textStyle="bold"
                                        android:text="Dish Shared"
                                        android:background="@drawable/button_bground"
                                        android:textColor="#009111"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center">

                                    <TextView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:textColor="#FFA500"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textAlignment="center"
                                        android:background="@drawable/status_prime_notice_home"
                                        android:id="@+id/ideas"

                                        />

                                    <Button
                                        android:id="@+id/dishideas"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="1dp"
                                        android:layout_margin="3dp"
                                        android:padding="5dp"
                                        android:textStyle="bold"
                                        android:text="Dish Idea Inspirations"
                                        android:background="@drawable/button_bground"
                                        android:textColor="#009111"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center">

                                    <TextView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:textColor="#FFA500"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textAlignment="center"
                                        android:background="@drawable/status_prime_notice_home"
                                        android:id="@+id/recipes"

                                        />

                                    <Button
                                        android:id="@+id/dishrecipe"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="1dp"
                                        android:layout_margin="3dp"
                                        android:padding="5dp"
                                        android:textStyle="bold"
                                        android:text="Dish Recipes List"
                                        android:background="@drawable/button_bground"
                                        android:textColor="#009111"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/txtselect"
                                        android:text="Home"
                                        android:layout_marginTop="1dp"
                                        android:typeface="sans"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorPrimary"
                                        android:gravity="center" />
                                    <ImageButton
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/schedule"
                                        android:padding="5dp"
                                        android:id="@+id/donestatus"
                                        android:background="@color/colorWhite"
                                        />

                                </LinearLayout>

                            </LinearLayout>





                        </LinearLayout>



                    </LinearLayout>











