<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite">




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                          >
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Wine and Chocolate"
                                    android:id="@+id/edtbundlename"
                                    android:layout_marginTop="1dp"

                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorGray"
                                    android:gravity="center" />

                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                >


                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:src="@drawable/home_background_chef"
                                    android:padding="5dp"
                                    android:layout_marginLeft="50dp"
                                    android:scaleType="fitXY"
                                    android:id="@+id/bundleprofileImage"
                                    android:background="@color/colorWhite"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorRed"
                                  android:layout_gravity="end"
                                  android:text="4 items"
                                    android:textStyle="bold"
                                    android:id="@+id/edtquantity"

                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                >
                                <TextView
                                    android:id="@+id/edtprice"
                                    android:text="R230,20"
                                    android:textSize="18sp"
                                    android:padding="3dp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorWhite"
                                    android:background="@drawable/button_bground_login3"
                                  />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                 android:layout_gravity="center"
                                android:gravity="center"
                                >


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Loading please wait..."
                                    android:layout_marginTop="1dp"
                                    android:typeface="sans"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:visibility="gone"
                                    android:id="@+id/total"
                                    android:textColor="@color/colorGreen"
                                    android:gravity="center" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center"
                                android:weightSum="2"
                                >

                                <Button
                                    android:id="@+id/btn_order"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30sp"
                                    android:layout_weight="1"
                                    android:layout_margin="10dp"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:background="@drawable/button_bground"
                                    android:text="Order Now" />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="30sp"
                                    android:text="Cancel"
                                    android:layout_margin="10dp"
                                    android:textColor="@color/colorRed"
                                    android:id="@+id/btn_cancel"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_bground"
                                    />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/layoutlist"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                >
                                <ListView

                                    android:id="@+id/lstgross"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:divider="@color/colorWhite"

                                 android:padding="1dp"
                                    android:dividerHeight="4dp"
                                    android:layout_weight="1"
                                    >
                                </ListView>

                            </LinearLayout>


                        </LinearLayout>



                    </LinearLayout>











